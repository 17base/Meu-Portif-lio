<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jonass.meuportifolio.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <TextView
                android:text="Meus apps Nanodegree"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:id="@+id/textView" />

            <info.hoang8f.widget.FButton
                android:text="Filmes populares"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/fb_filmes"
                android:layout_gravity="center"
                fbutton:buttonColor="@color/colorAccent"
                fbutton:shadowColor="@color/colorAccentDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>

            <info.hoang8f.widget.FButton
                android:text="Stock Hawk"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/fb_stock"
                android:layout_gravity="center"
                android:layout_below="@+id/fb_filmes"
                android:layout_alignLeft="@+id/fb_filmes"
                android:layout_alignStart="@+id/fb_filmes"
                fbutton:buttonColor="@color/colorAccent"
                fbutton:shadowColor="@color/colorAccentDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>

            <info.hoang8f.widget.FButton
                android:text="Faça-o maior"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/fb_maior"
                android:layout_gravity="center"
                android:layout_below="@+id/fb_stock"
                android:layout_alignLeft="@+id/fb_stock"
                android:layout_alignStart="@+id/fb_stock"
                fbutton:buttonColor="@color/colorAccent"
                fbutton:shadowColor="@color/colorAccentDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>

            <info.hoang8f.widget.FButton
                android:text="Faça seu aplicativo com Material"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/fb_material"
                android:layout_gravity="center"
                android:layout_below="@+id/fb_maior"
                android:layout_alignLeft="@+id/fb_maior"
                android:layout_alignStart="@+id/fb_maior"
                fbutton:buttonColor="@color/colorAccent"
                fbutton:shadowColor="@color/colorAccentDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>

            <info.hoang8f.widget.FButton
                android:text="Seja onipresente"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/fb_onipresente"
                android:layout_gravity="center"
                android:layout_below="@+id/fb_material"
                android:layout_alignLeft="@+id/fb_material"
                android:layout_alignStart="@+id/fb_material"
                fbutton:buttonColor="@color/colorAccent"
                fbutton:shadowColor="@color/colorAccentDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>

            <info.hoang8f.widget.FButton
                android:text="Capstone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/fb_capstone"
                android:layout_gravity="center"
                android:layout_below="@+id/fb_onipresente"
                android:layout_alignLeft="@+id/fb_onipresente"
                android:layout_alignStart="@+id/fb_onipresente"
                fbutton:buttonColor="@color/colorAccent"
                fbutton:shadowColor="@color/colorAccentDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
